{
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@actions/core": "^1.2.1",
    "@actions/exec": "^1.0.3",
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.0.3",
    "@semantic-release/npm": "^7.0.3",
    "@semantic-release/release-notes-generator": "^9.0.0",
    "semantic-release": "^17.0.4"
  },
  "description": "GitHub Action for Semantic Release.",
  "devDependencies": {
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "@ridedott/eslint-config": "^0.4.80",
    "@types/conventional-changelog-writer": "^4.0.0",
    "@types/jest": "^25.1.2",
    "@types/node": "^13.7.0",
    "@types/semantic-release": "^15.13.1",
    "@zeit/ncc": "^0.21.1",
    "commitizen": "^4.0.3",
    "cspell": "^4.0.47",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.0",
    "typescript": "^3.7.4"
  },
  "engines": {
    "node": "12"
  },
  "files": [
    "dist",
    "src"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run husky:pre-commit"
    }
  },
  "license": "MIT",
  "lint-staged": {
    "*.ts": [
      "eslint"
    ],
    "*.{json,md,ts,yml,yaml}": [
      "prettier --write"
    ]
  },
  "main": "dist/index.js",
  "name": "@ridedott/release-me-action",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git@github.com:ridedott/release-me-action.git"
  },
  "scripts": {
    "build": "run-s clean build:bundle",
    "build:bundle": "./scripts/build.sh",
    "build:ts": "tsc --project tsconfig.production.json",
    "build:ts:watch": "tsc --project tsconfig.production.json --watch",
    "clean": "run-p clean:*",
    "clean:dist": "rm -rf ./dist",
    "clean:lib": "rm -rf ./lib",
    "cz": "git-cz",
    "cz:retry": "git-cz --retry",
    "format": "prettier --check \"**/*.{js,json,md,ts,yml,yaml}\"",
    "format:fix": "prettier --write \"**/*.{js,json,md,ts,yml,yaml}\"",
    "husky:lint-staged": "lint-staged",
    "husky:pre-commit": "run-p spellcheck husky:lint-staged",
    "lint": "eslint --resolve-plugins-relative-to \"./node_modules/@ridedott/eslint-config\" \"**/*.ts\"",
    "lint:fix": "eslint --fix --resolve-plugins-relative-to \"./node_modules/@ridedott/eslint-config\" \"**/*.ts\"",
    "release": "semantic-release",
    "spellcheck": "cspell \"**/*\"",
    "test": "jest",
    "test:ci": "jest --ci --collect-coverage",
    "test:coverage": "jest --collect-coverage",
    "test:watch": "jest --watch --verbose false",
    "types": "tsc --noEmit"
  },
  "version": "1.0.0"
}
